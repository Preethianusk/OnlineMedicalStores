<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Checkout</title>
  <style>
    body {
      
    background-color: #17a2b8;
  font-family: Arial, sans-serif;
  margin: 0;
  padding: 0;
}

h1 {
  text-align: center;
}

.checkout-form {
  max-width: 600px;
  margin: 0 auto;
  padding: 20px;
  border: 1px solid #ccc;
  border-radius: 5px;
}

.checkout-form div {
  margin-bottom: 15px;
}

.checkout-form input[type="text"],
.checkout-form textarea {
  width: calc(100% - 20px);
  padding: 10px;
  margin-bottom: 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
}

.checkout-form textarea {
  height: 80px;
}

.checkout-form .buttons {
  text-align: center;
}

.checkout-form button {
  padding: 10px 20px;
  margin-right: 10px;
  background-color: black;
  color: #fff;
  border: none;
  border-radius: 8px;
  cursor: pointer;
  transition: background-color 0.3s;
}

.checkout-form button:hover {
  background-color:#17a2b8
}

.checkout-form a button {
  text-decoration: none;
}
.container {
    max-width: 600px;
    margin: 50px auto;
    padding: 20px;
    background-color: #fff;
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
        }
        .container {
            max-width: 800px;
            margin: 0 auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }
        h1, h2, p {
            margin-top: 0;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        th, td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }
        th {
            background-color: #f2f2f2;
            font-weight: bold;
        }
        tr:hover {
            background-color: #f5f5f5;
        }

  </style>
</head>
<body>

    <div class="container">
      <h2 align="center">Ordered Products</h2>
      <table align="center">
          <thead>
              <tr>
                  <th>Product Name</th>
                  <th>Quantity</th>
                  <th>Price</th>
              </tr>
          </thead>
          <tbody>
              <% products.forEach(function(product) { %>
                  <tr>
                      <td><%= product.name %></td>
                      <td><%= product.quantity %></td>
                      <td><%= product.totalPrice%></td>
                  </tr>
              <% }); %>
          </tbody>
      </table>
  <br>
      <h2>Total :â‚¹ <%= total %></h2>
    </div>
    <br><br><br>
  <div class="container">
  <h1>Check Out</h1>
  <form class="checkout-form" method="post" action="/order_placed">

    <% products.forEach(function(product) { %>
        <input type="hidden" name="products[]" value="<%= product.name %>">
        <input type="hidden" name="quantities[]" value="<%= product.quantity %>">
        <input type="hidden" name="prices[]" value="<%= product.totalPrice %>">
    <% }); %>
    <input type="hidden" name="total" value="<%= total %>">
 
    <div class="shipping-address">
        <input type="text" name="name" placeholder="Name">
        <input type="text" name="email" placeholder="Email Address">
        <textarea name="address" placeholder="Address"></textarea>
        <input type="text" name="optional" placeholder="House, Office, etc">
        <input type="text" name="country" placeholder="Country">
        <input type="text" name="postalCode" placeholder="Postal Code">
        <input type="text" name="phoneNumber" placeholder="Phone Number">
    </div>
    <div class="buttons">
        <button type="button">Return To Cart</button>
        <button type="submit">Place Order</button>
    </div>
</form>

</div>
</body>
</html>